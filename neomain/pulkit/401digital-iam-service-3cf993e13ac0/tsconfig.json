{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "@environments": ["src/environment"],
      "@environments/*": ["environment/*"],
      "@model": ["src/models"],
      "@model/*": ["src/models/*"],
      "@app": ["src/app"],
      "@config": ["src/configs"]
    }
  },
  "exclude":[
    "public"
  ],
  "include": ["src"]
}
